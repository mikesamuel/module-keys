{
  "name": "module-keys",
  "description": "Module identity as a basis for privilege separation for ESM & CommonJS modules",
  "version": "1.0.2",
  "keywords": [
    "design-patterns",
    "security",
    "suspicious",
    "whitelist",
    "sec-roadmap"
  ],
  "main": "index.js",
  "files": [
    "index.js",
    "index.mjs",
    "babel/index.js",
    "cjs/index.js",
    "lib/relpath.js"
  ],
  "dependencies": {},
  "scripts": {
    "cover": "istanbul cover _mocha",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint .",
    "prepack": "npm run lint && npm test",
    "test": "mocha"
  },
  "pre-commit": [
    "prepack"
  ],
  "author": "@mikesamuel",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikesamuel/module-keys.git"
  },
  "bugs": {
    "url": "https://github.com/mikesamuel/module-keys/issues"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-tester": "^5.3.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.15.0",
    "eslint-config-strict": "^14.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "pre-commit": "^1.2.2"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.js"
        ],
        "env": {
          "node": true
        }
      },
      {
        "files": [
          "**/*.mjs"
        ],
        "parserOptions": {
          "sourceType": "module"
        }
      }
    ],
    "extends": [
      "strict"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "source",
      "ecmaFeatures": {
        "impliedStrict": false
      }
    },
    "rules": {
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "do not submit"
          ]
        }
      ],
      "no-void": "off",
      "strict": [
        "error",
        "global"
      ]
    }
  }
}
